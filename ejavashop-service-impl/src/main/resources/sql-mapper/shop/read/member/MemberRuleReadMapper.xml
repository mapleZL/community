<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ejavashop.dao.shop.read.member.MemberRuleReadDao">
	<resultMap id="MemberRuleResult" type="com.ejavashop.entity.member.MemberRule">
			<result property="id" column="id" />
			<result property="register" column="register" />
			<result property="login" column="login" />
			<result property="orderEvaluate" column="order_evaluate" />
			<result property="orderBuy" column="order_buy" />
			<result property="orderMax" column="order_max" />
			<result property="state" column="state" />
	</resultMap>
	<select id="get" parameterType="Integer" resultMap="MemberRuleResult">
		select
		   *
		from `member_rule`
		where `id` = #{id}
		<if test="state != null">
			and `state`= #{state}
		</if>
	</select>
	
</mapper>