<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ejavashop.dao.shop.read.product.ProductOrderReadDao">
	<resultMap id="ProductOrderResult" type="com.ejavashop.entity.product.ProductOrder">
			<result property="id" column="id" />
			<result property="productId" column="product_id" />
			<result property="sortType" column="sort_type" />
			<result property="sort" column="sort" />
	</resultMap>
	
	<select id="get" parameterType="Integer" resultMap="ProductOrderResult">
		select
		   *
		from `product_order`
		where `id` = #{id}
	</select>
	
	<select id = "selectProductId" parameterType="String" resultType="java.lang.Integer">
		select
		`product_id` 
		from `product_order`
		where `sort_type` = #{sortType}
	</select>
</mapper>