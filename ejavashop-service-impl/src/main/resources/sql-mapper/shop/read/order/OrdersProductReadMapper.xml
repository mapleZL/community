	<select id="getWaitedStock" resultMap="OrdersProductResult">
	    select p.* from orders_product p where p.orders_id in (select id from orders o where (o.order_state = 1 or o.order_state = 2 or (o.order_state  =3 and (sync_state is null or sync_state = '未推送')) or o.order_state = 8))
	</select>
	<select id="page" resultType="com.ejavashop.entity.order.OrdersProduct">
		select * from `orders_product` t1
		<include refid="whereConditions" />
		order by id
		<if test="size != null and size &gt; 0">limit #{start},#{size}</if>
	</select>
	
	
	<select id="getProductDayDto" resultType="com.ejavashop.dto.ProductDayDto">
        select 
			p.product_code as productSPU,
			op.product_sku as productName,
			op.seller_id as sellerId,
			left(op.create_time,10) as orderDay,
			sum(op.money_amount) as moneyAmount,
			sum(op.number) as number,
			op.money_price as moneyPrice
		from orders_product as op 
		left join orders as o on o.id=op.orders_id
		left join product as p on op.product_id=p.id
		where
			o.order_state != 6 and op.member_product_back_id = 0 and op.number > 0
			<if test="queryMap.q_startTime != null and queryMap.q_startTime !=''"  >
				and op.create_time &gt;= #{queryMap.q_startTime}
			</if>
			<if test="queryMap.q_endTime != null and queryMap.q_endTime !=''"  >
				and op.create_time &lt;= #{queryMap.q_endTime}
			</if>
			<if test="queryMap.q_sellerId != null and queryMap.q_sellerId !=''"  >
				and op.seller_id = #{queryMap.q_sellerId}
			</if>
			<if test="queryMap.q_spu != null and queryMap.q_spu !=''"  >
				and p.product_code = #{queryMap.q_spu}
			</if>
			<if test="queryMap.q_sku != null and queryMap.q_sku !=''"  >
				and op.product_sku = #{queryMap.q_sku}
			</if>
		group by orderDay,productName,productSPU,sellerId,op.money_price
		order by orderDay desc,productName
    </select>
    
