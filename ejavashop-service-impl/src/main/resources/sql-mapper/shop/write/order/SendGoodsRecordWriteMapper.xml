<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ejavashop.dao.shop.write.order.SendGoodsRecordWriteDao">
	<resultMap id="SendGoodsRecordResult" type="com.ejavashop.entity.order.SendGoodsRecord">
			<result property="id" column="id" />
			<result property="bookingGoodsId" column="booking_goods_id" />
			<result property="sku" column="sku" />
			<result property="deliveredSum" column="delivered_sum" />
			<result property="orderGoodsId" column="order_goods_id" />
	</resultMap>
	
<!-- 	<select id="get" parameterType="Integer" resultMap="SendGoodsRecordResult">
		select
		   *
		from `send_goods_record`
		where `id` = #{id}
	</select> -->
	
	<update id="update" parameterType="com.ejavashop.entity.order.SendGoodsRecord">
        update `send_goods_record` 
    	<set>
			<if test="id != null">`id`= #{id},</if>
			<if test="bookingGoodsId != null">`booking_goods_id`= #{bookingGoodsId},</if>
			<if test="sku != null">`sku`= #{sku},</if>
			<if test="deliveredSum != null">`delivered_sum`= #{deliveredSum},</if>
			<if test="orderGoodsId != null">`order_goods_id`= #{orderGoodsId}</if>
	    </set>
        where `id` = #{id}
	</update>
	
	<insert id="insert" parameterType="com.ejavashop.entity.order.SendGoodsRecord" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
		insert into 
		`send_goods_record`
		(
			
			`booking_goods_id`,
			`sku`,
			`delivered_sum`,
			`order_goods_id`
		)
		values
		(
			
			#{bookingGoodsId},
			#{sku},
			#{deliveredSum},
			#{orderGoodsId}
		)
	</insert>
