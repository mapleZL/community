	<update id="update" parameterType="com.ejavashop.entity.product.ProductSkuOther">
        update `product_sku_other` 
    	<set>
			<if test="id != null">`id`= #{id},</if>
			<if test="productId != null">`product_id`= #{productId},</if>
			<if test="skuOther != null">`sku_other`= #{skuOther},</if>
			<if test="createtime != null">`createtime`= #{createtime}</if>
	    </set>
        where `id` = #{id}
	</update>
	
	<insert id="insert" parameterType="com.ejavashop.entity.product.ProductSkuOther" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
		insert into 
		`product_sku_other`
		(
			
			`product_id`,
			`sku_other`,
			`createtime`
		)
		values
		(
			
			#{productId},
			#{skuOther},
			now()
		)
	</insert>
	
</mapper>