	<sql id="getTailor">
			<if test="q_memberName != null and q_memberName != '' ">
			    and p.member_id = (select id from member where name= #{q_memberName})
			</if>
			<if test="q_createTimes != null and q_createTimes != '' ">
				and p.createTime &gt;= #{q_createTimes}
			</if>
			<if test="q_createTimee != null and q_createTimee != '' ">
				and p.createTime &lt;= #{q_createTimee}
			</if>
	</sql>
	
	<delete id="deleteTailor" >
        delete from `personal_tailor` where `id` = #{id}
	</delete>
	
	<update id="update" parameterType="com.ejavashop.entity.member.PersonalTailor">
        update `personal_tailor` 
    	<set>
			<if test="id != null">`id`= #{id},</if>
			<if test="name != null">`name`= #{name},</if>
			<if test="mobile != null">`mobile`= #{mobile},</if>
			<if test=" qq != null">` qq`= #{ qq},</if>
			<if test="weixin != null">`weixin`= #{weixin}</if>
			<if test="description != null">`description`= #{description}</if>
			<if test="memberId != null">`member_id`= #{memberId}</if>
	    </set>
        where `id` = #{id}
	</update>
	
	<insert id="insert" parameterType="com.ejavashop.entity.member.PersonalTailor" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
		insert into 
		`personal_tailor`
		(
			
			`name`,
			`mobile`,
			`qq`,
			`weixin`,
			`description`,
			`member_id`,
			`create_time`,
			`update_time`
		)
		values
		(
			#{name},
			#{mobile},
			#{qq},
			#{weixin},
			#{description},
			#{memberId},
			now(),
			now()
		)
	</insert>
	
