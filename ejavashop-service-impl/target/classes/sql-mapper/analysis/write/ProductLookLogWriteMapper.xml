<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ejavashop.dao.analysis.write.ProductLookLogWriteDao">
	<resultMap id="ProductLookLogResult" type="com.ejavashop.entity.analysis.ProductLookLog">
			<result property="id" column="id" />
			<result property="siteCookie" column="site_cookie" />
			<result property="memberId" column="member_id" />
			<result property="productId" column="product_id" />
			<result property="createTime" column="create_time" />
			<result property="state" column="state" />
	</resultMap>
	
	<select id="get" parameterType="Integer" resultMap="ProductLookLogResult">
		select
		   *
		from `product_look_log`
		where `id` = #{id}
	</select>
	
	<update id="update" parameterType="com.ejavashop.entity.analysis.ProductLookLog">
        update `product_look_log` 
    	<set>
			<if test="id != null">`id`= #{id},</if>
			<if test="siteCookie != null">`site_cookie`= #{siteCookie},</if>
			<if test="memberId != null">`member_id`= #{memberId},</if>
			<if test="productId != null">`product_id`= #{productId},</if>
			<if test="createTime != null">`create_time`= #{createTime}</if>
			<if test="state != null">`state`= #{state}</if>
	    </set>
        where `id` = #{id}
	</update>
	
	<update id="updateProductLookLogByProductId" parameterType="com.ejavashop.entity.analysis.ProductLookLog">
		update `product_look_log` set `state`= #{state} where `member_id`= #{memberId} and `product_id`= #{productId}
	</update>
	
	<insert id="insert" parameterType="com.ejavashop.entity.analysis.ProductLookLog" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
		insert into 
		`product_look_log`
		(
			`site_cookie`,
			`member_id`,
			`product_id`,
			`create_time`,
			`state`
		)
		values
		(
			#{siteCookie},
			#{memberId},
			#{productId},
			date_format(now(),'%Y-%c-%d'),
			#{state}
		)
	</insert>
	
	<update id="updateByMemberId">
        update `product_look_log` 
        set `member_id`= #{memberId}
        where `site_cookie`= #{siteCookie}
	</update>
	
</mapper>