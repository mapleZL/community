<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ejavashop.dao.analysis.read.ProductLookLogReadDao">
	<resultMap id="ProductLookLogResult" type="com.ejavashop.entity.analysis.ProductLookLog">
			<result property="id" column="id" />
			<result property="siteCookie" column="site_cookie" />
			<result property="memberId" column="member_id" />
			<result property="productId" column="product_id" />
			<result property="createTime" column="create_time" />
			<result property="state" column="state" />
	</resultMap>
	
	<select id="get" parameterType="Integer" resultMap="ProductLookLogResult">
		select
		   *
		from `product_look_log`
		where `id` = #{id}
	</select>
	
	
	<sql id="getCondition">
        <where>
            <if test="queryMap.q_memberId != null and queryMap.q_memberId !=''">
                and `member_id` = #{queryMap.q_memberId}
            </if>
            <if test="queryMap.q_productId != null and queryMap.q_productId !=''">
                and `product_id` = #{queryMap.q_productId}
            </if>
         	 <if test="queryMap.productids != null and queryMap.productids !=''"  >
			 	and `product_id` in 
			 	 <foreach item="item" index="index" collection="queryMap.productids" open="(" separator="," close=")">  
				  #{item}  
				 </foreach>  
			</if>
			and state = 1
        </where>
    </sql>
    
	<select id="getProductLookLogsCount" parameterType="java.util.Map" resultType="Integer">
		select
		   count(*)
		from `product_look_log`
		<include refid="getCondition"/>
	</select>
	
	<select id="getProductLookLogs" parameterType="java.util.Map" resultMap="ProductLookLogResult">
		select
		   *
		from `product_look_log`
		<include refid="getCondition"/>
		order by `id` desc
		<if test="size != null and size &gt; 0">limit #{start},#{size}</if>
	</select>
	
	<select id="getProductPV" parameterType="java.util.Map" resultMap="ProductLookLogResult">
		select
		   *
		from `product_look_log`
		<include refid="getCondition"/>
	</select>
	
	<select id="countBySiteCookieAndProductId" resultType="java.lang.Integer">
		select
		   count(1)
		from `product_look_log`
		where `site_cookie` = #{siteCookie}
		and product_id = #{productId}
		and create_time = date_format(now(),'%Y-%c-%d')
	</select>
	
	<select id="countBySiteCookie" resultType="java.lang.Integer">
		select
		   count(1)
		from `product_look_log`
		where `site_cookie` = #{siteCookie}
		and member_id = 0
	</select>
	
	
</mapper>