<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ejavashop.dao.shop.read.product.ProductAttrReadDao">

    <select id="get" resultType="com.ejavashop.entity.product.ProductAttr">
        select
        *
        from `product_attr`
        where `id` = #{id}
    </select>
    
     <select id="getSize"  parameterType="Integer" resultType="com.ejavashop.entity.product.ProductAttr">
      select * from `product_attr` where `product_id` = #{productId} and `product_type_attr_id` = #{value}
    </select>
    
     <select id="getByProductIdAndName" resultType="com.ejavashop.entity.product.ProductAttr">
        select
        *
        from `product_attr`
        where `product_id` = #{productId}
        and `name`= #{name}
    </select>
    
    <select id="getByProductId" resultType="com.ejavashop.entity.product.ProductAttr">
        select
        *
        from `product_attr`
        where `product_id` = #{productId} order by id desc
    </select>
    
    <select id="getWeight" resultType="com.ejavashop.entity.product.ProductAttr">
        select
        *
        from `product_attr`
        where `product_id` = #{productId}
        and `name`= #{name}
    </select>
    
    
    
   <!--  <select id="page" resultType="com.ejavashop.entity.product.ProductAttr">
		select * from `product_attr` t1
		<include refid="whereConditions" />
		order by id
		<if test="size != null and size &gt; 0">limit #{start},#{size}</if>
	</select> -->
	
	 <select id="page" resultType="com.ejavashop.entity.product.ProductAttr">
        select
        <include refid="selectColumn"/>
        from `product_attr`
        <include refid="whereConditions"/>
        order by id desc
        <if test="size != null and size &gt; 0">limit #{start},#{size}</if>
    </select>
      <sql id="selectColumn">
        `id`,
        `product_id`,
        `product_type_attr_id`,
        `name`,
        `value`,
        `state`
    </sql>
    
    	
	<!-- 查询条件 -->
	<sql id="whereConditions">
		where 1=1
		<trim  suffixOverrides="," >
			<if test="id != null and id !=''"  > and `id`= #{id}</if>
			<if test="productTypeAttrIds" > and `product_type_attr_id` in (${productTypeAttrIds})</if>
			<if test="productId != null and productId !=''"  > and `product_id`= #{productId}</if>
			<if test="productTypeAttrId != null and productTypeAttrId !=''"  > and `product_type_attr_id`= #{productTypeAttrId}</if>
			<if test="name != null and name !=''"  > and `name`= #{name}</if>
			<if test="value != null and value !=''"  > and `value`= #{value}</if>
			<if test="state != null and state !=''"  > and `state`= #{state}</if>
		</trim>
	</sql>
	
	<select id="count" resultType="java.lang.Integer">
        select count(1) from `product_attr`
        <include refid="whereConditions"/>
    </select>
</mapper>