<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ejavashop.dao.shop.read.product.ProductBrandReadDao">
	<resultMap id="ProductBrandResult" type="com.ejavashop.entity.product.ProductBrand">
			<result property="id" column="id" />
			<result property="name" column="name" />
			<result property="nameFirst" column="name_first" />
			<result property="image" column="image" />
			<result property="lookMethod" column="look_method" />
			<result property="top" column="top" />
			<result property="sort" column="sort" />
			<result property="createId" column="create_id" />
			<result property="createTime" column="create_time" />
			<result property="updateId" column="update_id" />
			<result property="updateTime" column="update_time" />
			<result property="state" column="state" />
	</resultMap>
	<select id="getById" parameterType="Integer" resultMap="ProductBrandResult">
		select
		   *
		from `product_brand`
		where `id` = #{id} order by sort
	</select>
	
	<select id="getByIds" parameterType="String" resultMap="ProductBrandResult">
		select
		   *
		from `product_brand`
		where `id` in (${ids}) order by sort
	</select>
	
	<select id="findAll" resultMap="ProductBrandResult">
		select * from `product_brand` where state = 2 order by sort
	</select>
	
	 <select id="count" resultType="java.lang.Integer">
        select count(1) from product_brand t1
        <include refid="whereConditions"/>
    </select>
     <sql id="whereConditions">
        <where>
            state != 4
            <if test="param1.q_name != null and param1.q_name != ''">
                and t1.`name` like CONCAT('%',#{param1.q_name},'%')
            </if>
            <if test="param1.q_top != null and param1.q_top != ''">
                and t1.`top` = #{param1.q_top}
            </if>
            <if test="param1.q_state != null and param1.q_state != ''">
                and t1.`state` = #{param1.q_state}
            </if>
        </where>
    </sql>
    
    <select id="getByName" resultType="java.lang.Integer">
        select count(1) from product_brand where name = #{name}
    </select>
    
    <select id="getMaxId" resultType="java.lang.Integer">
        select max(id) from product_brand
    </select>
    
    <select id="listNoPage" resultType="com.ejavashop.entity.product.ProductBrand">
        select * from product_brand t1
        where `state` = 2
    </select>
    
    <select id="page" resultType="com.ejavashop.entity.product.ProductBrand">
        select * from product_brand t1
        <include refid="whereConditions"/>
        order by sort desc,id desc
        <if test="size != null and size &gt; 0">limit #{start},#{size}</if>
    </select>
	
</mapper>