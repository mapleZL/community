			<result property="updateId" column="update_id" />
			<result property="updateName" column="update_name" />
			<result property="updateTime" column="update_time" />
	</resultMap>
	
	<select id="get" parameterType="Integer" resultMap="ProductBuyStockResult">
		select
		   *
		from `product_buy_stock`
		where `id` = #{id}
	</select>
	
	<select id="page" resultType="com.ejavashop.entity.product.ProductBuyStock">
		select * from `product_buy_stock` t1
		<include refid="whereConditions" />
		order by id
		<if test="size != null and size &gt; 0">limit #{start},#{size}</if>
	</select>
	
	<select id="getCount" parameterType="java.util.Map"
		resultType="java.lang.Integer">
		select count(1) from `product_buy_stock` t1
		<include refid="whereConditions" />
	</select>
	
	<!-- 查询条件 -->
	<sql id="whereConditions">
		where 1=1
		<trim  suffixOverrides="," >
			<if test="id != null and id !=''"  > and `id`= #{id}</if>
			<if test="productId != null and productId !=''"  > and `product_id`= #{productId}</if>
			<if test="goodsId != null and goodsId !=''"  > and `goods_id`= #{goodsId}</if>
			<if test="sku != null and sku !=''"  > and `sku`= #{sku}</if>
			<if test="q_sku != null and q_sku !=''"  > and `sku`= #{q_sku}</if>
			<if test="stock != null and stock !=''"  > and `stock`= #{stock}</if>
			<if test="state != null and state !=''"  > and `state`= #{state}</if>
			<if test="grade1 != null and grade1 !=''"  > and `grade1`= #{grade1}</if>
			<if test="grade2 != null and grade2 !=''"  > and `grade2`= #{grade2}</if>
			<if test="grade3 != null and grade3 !=''"  > and `grade3`= #{grade3}</if>
			<if test="grade4 != null and grade4 !=''"  > and `grade4`= #{grade4}</if>
			<if test="grade5 != null and grade5 !=''"  > and `grade5`= #{grade5}</if>
			<if test="createId != null and createId !=''"  > and `create_id`= #{createId}</if>
			<if test="createName != null and createName !=''"  > and `create_name`= #{createName}</if>
			<if test="createTime != null and createTime !=''"  > and `create_time`= #{createTime}</if>
			<if test="updateId != null and updateId !=''"  > and `update_id`= #{updateId}</if>
			<if test="updateName != null and updateName !=''"  > and `update_name`= #{updateName}</if>
			<if test="updateTime != null and updateTime !=''"  > and `update_time`= #{updateTime}</if>
		</trim>
	</sql>
	
	<select id="getBySku" parameterType="String" resultMap="ProductBuyStockResult">
		select
		   *
		from `product_buy_stock`
		where `sku` = #{sku}
	</select>
	
	<select id="getByGoodsId" parameterType="Integer" resultMap="ProductBuyStockResult">
		select
		   *
		from `product_buy_stock`
		where `goods_id` = #{goodsId}
	</select>
	
