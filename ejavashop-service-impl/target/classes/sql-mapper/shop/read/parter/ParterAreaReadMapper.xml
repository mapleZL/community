<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ejavashop.dao.shop.read.parter.ParterAreaReadDao">
	<resultMap id="ParterAreaResult" type="com.ejavashop.entity.parter.ParterArea">
			<result property="id" column="id" />
			<result property="parterSignId" column="parter_sign_id" />
			<result property="provinceId" column="province_id" />
			<result property="cityId" column="city_id" />
			<result property="areaId" column="area_id" />
			<result property="craeteTime" column="craete_time" />
			<result property="updateTime" column="update_time" />
			<result property="createMan" column="create_man" />
			<result property="parterSignName" column="parter_sign_name" />
			<result property="regionName" column="regionName" />
	</resultMap>
	
	<select id="get" parameterType="Integer" resultMap="ParterAreaResult">
		select
		   *
		from `parter_area`
		where `id` = #{id}
	</select>
	
	
	<select id="getParterAreaByParterSignId" resultMap="ParterAreaResult">
	  select pa.*,r.regionName as  regionName from `parter_area` as pa left join regions r on r.id = pa.area_id  where `parter_sign_id` = #{parterSignId}
	  <if test="memberAreaId !=null and memberAreaId !=''">
	  		and area_id = #{memberAreaId}
	  </if>
	  and r.regionType = 3 
	</select>
	
</mapper>