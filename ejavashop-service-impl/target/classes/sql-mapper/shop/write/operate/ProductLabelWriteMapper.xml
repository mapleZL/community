<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ejavashop.dao.shop.write.operate.ProductLabelWriteDao">
	<resultMap id="ProductLabelResult" type="com.ejavashop.entity.operate.ProductLabel">
			<result property="id" column="id" />
			<result property="name" column="name" />
			<result property="memberId" column="member_id" />
			<result property="state" column="state" />
			<result property="sku" column="sku" />
			<result property="norms" column="norms" />
			<result property="netWeight" column="net_weight" />
			<result property="grossWeight" column="gross_weight" />
			<result property="costPrice" column="cost_price" />
			<result property="marketPrice" column="market_price" />
			<result property="stock" column="stock" />
			<result property="brand" column="brand" />
			<result property="describe" column="describe" />
			<result property="image" column="image" />
			<result property="createId" column="create_id" />
			<result property="createName" column="create_name" />
			<result property="createTime" column="create_time" />
			<result property="updateTime" column="update_time" />
	</resultMap>
	
	<select id="get" parameterType="Integer" resultMap="ProductLabelResult">
		select
		   *
		from `product_label`
		where `id` = #{id}
	</select>
	
	<select id="getCount" parameterType="java.util.Map"
		resultType="java.lang.Integer">
		select count(1) from `product_label` t1
		<include refid="whereConditions" />
	</select>
	
	<delete id="del">
        delete from `product_label` where `id` = #{id}
	</delete>
	
	<select id="page" resultType="com.ejavashop.entity.operate.ProductLabel">
		select * from `product_label` t1
		<include refid="whereConditions" />
		order by id
		<if test="size != null and size &gt; 0">limit #{start},#{size}</if>
	</select>
	
	<select id="list" resultType="com.ejavashop.entity.operate.ProductLabel">
		select * from `product_label` t1
		order by id
	</select>
	
	<!-- 查询条件 -->
	<sql id="whereConditions">
		where 1=1
		<trim  suffixOverrides="," >
			<if test="id != null and id !=''"  > and `id`= #{id}</if>
			<if test="name != null and name !=''"  > and `name`= #{name}</if>
			<if test="q_name != null and q_name != ''">
				and `name` like CONCAT('%',#{q_name},'%')
			</if>
			<if test="memberId != null and memberId !=''"  > and `member_id`= #{memberId}</if>
			<if test="q_memberId != null and q_memberId!=''"  > and `member_id`= #{q_memberId}</if>
			<if test="state != null and state !=''"  > and `state`= #{state}</if>
			<if test="sku != null and sku !=''"  > and `sku`= #{sku}</if>
			<if test="norms != null and norms !=''"  > and `norms`= #{norms}</if>
			<if test="netWeight != null and netWeight !=''"  > and `net_weight`= #{netWeight}</if>
			<if test="grossWeight != null and grossWeight !=''"  > and `gross_weight`= #{grossWeight}</if>
			<if test="costPrice != null and costPrice !=''"  > and `cost_price`= #{costPrice}</if>
			<if test="marketPrice != null and marketPrice !=''"  > and `market_price`= #{marketPrice}</if>
			<if test="stock != null and stock !=''"  > and `stock`= #{stock}</if>
			<if test="brand != null and brand !=''"  > and `brand`= #{brand}</if>
			<if test="describe != null and describe !=''"  > and `describe`= #{describe}</if>
			<if test="image != null and image !=''"  > and `image`= #{image}</if>
			<if test="createId != null and createId !=''"  > and `create_id`= #{createId}</if>
			<if test="createName != null and createName !=''"  > and `create_name`= #{createName}</if>
			<if test="createTime != null and createTime !=''"  > and `create_time`= #{createTime}</if>
			<if test="updateTime != null and updateTime !=''"  > and `update_time`= #{updateTime}</if>
		</trim>
	</sql>
	
	<update id="update" parameterType="com.ejavashop.entity.operate.ProductLabel">
        update `product_label` 
    	<set>
			<if test="id != null">`id`= #{id},</if>
			<if test="name != null">`name`= #{name},</if>
			<if test="memberId != null">`member_id`= #{memberId},</if>
			<if test="state != null">`state`= #{state},</if>
			<if test="sku != null">`sku`= #{sku},</if>
			<if test="norms != null">`norms`= #{norms},</if>
			<if test="netWeight != null">`net_weight`= #{netWeight},</if>
			<if test="grossWeight != null">`gross_weight`= #{grossWeight},</if>
			<if test="costPrice != null">`cost_price`= #{costPrice},</if>
			<if test="marketPrice != null">`market_price`= #{marketPrice},</if>
			<if test="stock != null">`stock`= #{stock},</if>
			<if test="brand != null">`brand`= #{brand},</if>
			<if test="describe != null">`describe`= #{describe},</if>
			<if test="image != null">`image`= #{image},</if>
			<if test="createId != null">`create_id`= #{createId},</if>
			<if test="createName != null">`create_name`= #{createName},</if>
			<if test="createTime != null">`create_time`= #{createTime},</if>
			<if test="updateTime != null">`update_time`= #{updateTime}</if>
	    </set>
        where `id` = #{id}
	</update>
	
	<insert id="save" parameterType="com.ejavashop.entity.operate.ProductLabel" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
		insert into 
		`product_label`
		(
			
			`name`,
			`member_id`,
			`state`,
			`sku`,
			`norms`,
			`net_weight`,
			`gross_weight`,
			`cost_price`,
			`market_price`,
			`stock`,
			`brand`,
			`describe`,
			`image`,
			`create_id`,
			`create_name`,
			`create_time`,
			`update_time`
		)
		values
		(
			
			#{name},
			#{memberId},
			#{state},
			#{sku},
			#{norms},
			#{netWeight},
			#{grossWeight},
			#{costPrice},
			#{marketPrice},
			#{stock},
			#{brand},
			#{describe},
			#{image},
			#{createId},
			#{createName},
			#{createTime},
			#{updateTime}
		)
	</insert>
	<!-- 获得标签名称即辅料标签【仝照美】 -->
	<select id="getProductLabelName" resultMap="ProductLabelResult">
		select
		   *
		from `product_label`
		where 1=1
	</select>
	<!-- 根据sku_other值，来动态获得对应的辅料name【仝照美】 -->
	<select id="getProductLabelNameByskuother" resultMap="ProductLabelResult">
		select
		   *
		from `product_label`
		where 1=1 and `id` in
		<foreach collection="array" item="item" index="index" open="(" separator="," close=")">
			#{item}
		</foreach>
	</select>
</mapper>