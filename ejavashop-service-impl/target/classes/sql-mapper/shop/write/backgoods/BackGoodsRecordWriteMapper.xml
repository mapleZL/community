<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ejavashop.dao.shop.write.backgoods.BackGoodsRecordWriteDao">
	<resultMap id="BackGoodsRecordResult" type="com.ejavashop.entity.backgoods.BackGoodsRecord">
			<result property="id" column="id" />
			<result property="backGoodsId" column="back_goods_id" />
			<result property="productSku" column="product_sku" />
			<result property="wellNum" column="well_num" />
			<result property="badNum" column="bad_num" />
			<result property="productId" column="product_id" />
			<result property="backNum" column="back_num" />
	</resultMap>
	
	<update id="update" parameterType="com.ejavashop.entity.backgoods.BackGoodsRecord">
        update `back_goods_record` 
    	<set>
			<if test="id != null">`id`= #{id},</if>
			<if test="backGoodsId != null">`back_goods_id`= #{backGoodsId},</if>
			<if test="productSku != null">`product_sku`= #{productSku},</if>
			<if test="wellNum != null">`well_num`= #{wellNum},</if>
			<if test="badNum != null">`bad_num`= #{badNum},</if>
			<if test="productId != null">`product_id`= #{productId},</if>
			<if test="backNum != null">`back_num`= #{backNum}</if>
	    </set>
        where `id` = #{id}
	</update>
	
	<insert id="insert" parameterType="com.ejavashop.entity.backgoods.BackGoodsRecord" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
		insert into 
		`back_goods_record`
		(
			
			`back_goods_id`,
			`product_sku`,
			`well_num`,
			`bad_num`,
			`product_id`,
			`back_num`
		)
		values
		(
			
			#{backGoodsId},
			#{productSku},
			#{wellNum},
			#{badNum},
			#{productId},
			#{backNum}
		)
	</insert>
	
</mapper>