<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ejavashop.dao.shop.write.product.ProductOrderWriteDao">
	<resultMap id="ProductOrderResult" type="com.ejavashop.entity.product.ProductOrder">
			<result property="id" column="id" />
			<result property="productId" column="product_id" />
			<result property="sortType" column="sort_type" />
			<result property="sort" column="sort" />
	</resultMap>
	
	<!-- <select id="get" parameterType="Integer" resultMap="ProductOrderResult">
		select
		   *
		from `product_order`
		where `id` = #{id}
	</select> -->
	
	<update id="update" parameterType="com.ejavashop.entity.product.ProductOrder">
        update `product_order` 
    	<set>
			<if test="id != null">`id`= #{id},</if>
			<if test="productId != null">`product_id`= #{productId},</if>
			<if test="sort != null">`sort`= #{sort},</if>
			<if test="sortType != null">`sort_type`= #{sortType}</if>
	    </set>
        where `id` = #{id}
	</update>
	
	<insert id="insert" parameterType="com.ejavashop.entity.product.ProductOrder" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
		insert into 
		`product_order`
		(
			
			`product_id`,
			`sort_type`,
			`sort`
		)
		values
		(
			
			#{productId},
			#{sortType},
			#{sort}
		)
	</insert>
	
	<delete id="deleteById">
	delete from 
		`product_order`
	where  product_id = #{epId} 
	  and	sort_type = #{sortType}
	</delete>
	
</mapper>