	<insert id="insert" parameterType="com.phkj.entity.relate.StBaseinfoOrganization" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
		insert into 
		`st_baseinfo_organization`
		(
			
			`name`,
			`org_code`,
			`top_org_code`,
			`top_id`,
			`region`,
			`sts`,
			`is_enable`,
			`create_user_id`,
			`create_time`,
			`modify_user_id`,
			`modify_time`
		)
		values
		(
			
			#{name},
			#{orgCode},
			#{topOrgCode},
			#{topId},
			#{region},
			#{sts},
			#{isEnable},
			#{createUserId},
			#{createTime},
			#{modifyUserId},
			#{modifyTime}
		)
	</insert>
	
